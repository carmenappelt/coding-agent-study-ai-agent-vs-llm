{    "name": "GitHub Copilot Agent Test Environment",    "hostRequirements": {
        "memory": "4gb",
        "cpus": 2,
        "storage": "15gb"
    },
    "updateContentCommand": "echo 'Kostenlose Nutzung: max. 120 Core-Stunden/Monat' && sleep 2",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.copilot-tools"
            ],            "settings": {
                "github.codespaces.defaultExtensions": [
                    "GitHub.copilot",
                    "GitHub.copilot-chat",
                    "GitHub.copilot-tools"
                ],                "workbench.startupEditor": "none",
                "github.copilot.enable": true,
                "github.copilot.chat.showMessage": true,
                "github.copilot.chat.welcomeMessage": "always",
                "github.copilot.chat.features.agentChat.enabled": true,
                "github.copilot.chat.basePrefix": "@agent",
                "workbench.panel.defaultLocation": "right",
                "workbench.panel.opensMaximized": "always",
                "workbench.view.extension.github-copilot-chat.visible": true
            }
        },
        "codespaces": {
            "openFiles": [
                "README.md"
            ]
        }
    },
    "portsAttributes": {
        "3000": {
            "label": "Application",
            "onAutoForward": "openPreview"
        }
    },
    "postCreateCommand": "gh auth status || echo 'Willkommen! Sie sind bereits authentifiziert und k√∂nnen GitHub Copilot nutzen.'",
    "remoteUser": "codespace"
}